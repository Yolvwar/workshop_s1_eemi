{% extends 'base.html.twig' %}

{% block title %}{{ products.name }}{% endblock %}

{% block body %}
    <div class="container px-4">
        <div class="row my-4">
            <div class="col-md-6">
                <img src="{{ asset(products.image ? 'uploads/images/' ~ products.image : 'uploads/images/default-featured-image.jpg') }}" alt="{{ products.name }}_image" class="img-fluid" style="height: 400px; object-fit: cover;">
            </div>
            <div class="col-md-6">
                <h1>{{ products.name }}</h1>
                <p class="lead">{{ products.description }}</p>
                <h3 class="text-primary">Prix : {{ products.price }} €</h3>
                <a href="{{ path('app_cart_add', {id: products.id}) }}" class="btn btn-success btn-lg my-3">
                    <i class="bi bi-cart-plus"></i> Ajouter au panier
                </a>
                <a href="{{ path('products') }}" class="btn btn-secondary btn-lg my-3">
                    <i class="bi bi-arrow-left"></i> Retour à la liste des produits
                </a>
            </div>
        </div>
    </div>
{% endblock %}