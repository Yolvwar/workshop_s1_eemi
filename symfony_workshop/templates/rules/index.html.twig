{% extends 'base.html.twig' %}

{% block title %}Règles du jeu{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Les Règles Du Jeu</h1>
    <div class="row justify-content-center">
        <div class="col-md-9 my-3">
            <div class="card">
                <div class="card-body">
        {% for rule in rules %}
                    <h2 class="card-title">{{ rule.name }} :</h2>
                    <p>{{ rule.description }}</p>
        {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
